<!DOCTYPE html>
<?py #@ARGS title, items, post ?>
<?py debug_context() ?>
<html>
<head>
<title>${title}</title>
<style type="text/css">
    .odd {
        background-color: #DDD;
    }
    .even {
        background-color: #AAA;
    }
</style>
</head>
<body>
<h2>${title}</h2>
<table>
    <?py for item, val in items.iteritems(): ?>
    <tr class="#{cycle('odd', 'even')}">
        <td>${item}</td>
        <td>${val}</td>
    </tr>
    <?py #endfor ?>
    <?py for item, val in post.iteritems(): ?>
    <tr class="#{cycle('odd', 'even')}">
        <td>${item}</td>
        <td>${val}</td>
    </tr>
    <?py #endfor ?>
    <form method="POST">
        <input type="text" name="test" />
        <input type="text" name="test" />
        <textarea name="test2"></textarea>
        <input type="submit" />
    </form>
</table>
</body>
</html>

